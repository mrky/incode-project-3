<form action="/login" method="POST" class="mb-4 col-sm col-md-8 col-lg-4 mx-auto">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" {{#if email}} value="{{email}}" {{/if}}
            placeholder="Email" aria-describedby="emailHelp">
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>

    {{#if errorMessage}}
    <div class="text-center">
        <p class="text-danger mt-3 mb-0">{{errorMessage}}</p>
    </div>
    {{/if}}

    <div class="text-center">
        <button type="submit" class="btn btn-primary mt-4 mx-auto px-4">Login</button>
    </div>
</form>

<div class="text-center">
    <a class="mt-3" href="/signup">Need an account? Sign up here</a>
</div>